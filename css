/* Basic styling */
body {
    font-family: Arial, sans-serif;
    line-height: 1.6;
    background-color: #f4f4f4;
}

/* Header */
header {
    background: #333;
    color: #fff;
    padding: 10px 0;
    text-align: center;
    position: sticky;
    top: 0; 
    z-index: 1000; 
}

/* Navigation */
nav {
    width: 200px;
    background: #f4f4f4;
    padding: 20px;
    height: 100vh;
    position: fixed;
    transition: 0.3s;
}

